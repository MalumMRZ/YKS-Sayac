<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textUserName"
        android:textSize="20sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Yusuf Mirza Çoban" />


    <TextView
        android:id="@+id/textTimeDate"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="26.07.2023-14.59" />



    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintDimensionRatio="1:1"
        android:adjustViewBounds="true"
        android:src="@drawable/aytexam"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Karakök Denemesi 2. deneme 23.soru"
        android:gravity="center"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/expressionText"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Arkadaşlar bu soruda A ve B şıkkında takıldım sorunu tam anlamadım bir bakar mısınız ?" />


</LinearLayout>